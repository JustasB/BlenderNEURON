# .coveragerc to control coverage.py
[run]
branch = True
parallel = True
source = blenderneuron
command_line = tests/test_coverage.py
omit =
    blenderneuron/blender/panels/*
    blenderneuron/blender/operators/*
    blenderneuron/blender/properties/*
    blenderneuron/__init__.py
    blenderneuron/blender/utils.py

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:

ignore_errors = True

[html]
directory = htmlcov